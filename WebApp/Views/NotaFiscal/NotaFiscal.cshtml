@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cadastrar Nota Fiscal";
}
<div class="mg-t-15">
    <div class="form-example-wrap">
        <div class="col-md-12">
            <h3>Cadastrar de nota fiscal</h3>
        </div>
        <div class="col-md-12">
            <div class="form-example-int form-horizental">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Número NF</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <input type="text" class="form-control input-sm" id="sgdp">
                            </div>
                        </div>
                        <label style="float:left">*</label>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Data de emissão</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <select class="form-control" id="data_emissao"></select>
                            </div>
                        </div>
                        <label style="float:left">*</label>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Combustível</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <select class="form-control" id="combustivel"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Quantidade</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <input type="text" id="quantidade" class="form-control input-sm">
                            </div>
                        </div>
                        <label style="float:left">*</label>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Preço Unitário</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <input class="form-control" id="preco_unitario"></input>
                            </div>
                        </div>
                        <label style="float:left">*</label>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Valor Total</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <input class="form-control" id="valor_total"></input>
                            </div>
                        </div>
                        <label style="float:left">*</label>
                    </div>
                </div>
            </div>

            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Cupons Vinculados</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-2">
                            <label class="hrzn-fm">COO</label>
                        </div>
                        <div class="col-lg-5 col-md-4 col-sm-4 col-xs-8">
                            <div class="nk-int-st">
                                <select class="form-control" id="data_emissao"></select>
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-2 col-sm-2 col-xs-2">
                            <button class="btn btn-default btn-icon-notika" id="adicionar_cupom">
                                Adicionar
                            </button>
                        </div>
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                            <textarea class="form-control" id="cupons_selecionados"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Número Folha</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <input type="text" id="num_folha" class="form-control input-sm">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Mês/Ano para consulta ANP</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-3 col-xs-11">
                            <div class="nk-int-st">
                                <select class="form-control" id="Mes_Ano_Consulta_ANP"></select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                            <label class="hrzn-fm">Caso este campo seja enviado em branco, sera considerado o mês/ano da data de emissão para consultar a Tabela da ANP</label>
                        </div>
                    </div>
                </div>
            </div>           
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Departamento</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <select class="form-control" id="departamento"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Veiculo</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <input type="text" id="veiculo" class="form-control input-sm">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental mg-t-15">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Placa Veículo</label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-11">
                            <div class="nk-int-st">
                                <input type="text" id="placa_Veiculo" class="form-control input-sm">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <label class="hrzn-fm">* campos obrigatórios</label>
            </div>
            <div class="button-icon-btn">
                <button class="btn btn-default btn-icon-notika" id="cadastrar-tabela">
                    Enviar
                </button>
            </div>
        </div>
    </div>
</div>